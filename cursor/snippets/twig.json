{
  "Major comment": {
    "prefix": "###",
    "body": [
      "{# =======================================",
      " # $1",
      " # ======================================= $2#}"
    ]
  },
  "Minor comment": {
    "prefix": "##",
    "body": [
      "{# ======",
      " # $1",
      " # ====== $2#}"
    ]
  },
  "Block comment": {
    "prefix": "#",
    "body": [
      "{#",
      " # $1",
      " #}"
    ]
  }
}
